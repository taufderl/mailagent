= form_for @list, :html => { :class => 'form-horizontal' } do |f|
  .form-group
    = f.label t('list.name'), :class => 'control-label col-sm-2'
    .col-sm-3
      = f.text_field :name, :class => 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-4
      = f.submit t('helpers.links.save'), :class => 'btn btn-primary'
      = link_to t('helpers.links.cancel'), lists_path, :class => 'btn btn-default'

<%- model_class = List -%>
<div class="page-header">
  <h1><%=t 'list.title' %></h1>
</div>
<table class="table table-striped table-condensed table-hover span4">
  <thead>
    <tr>
      <th><%= t('list.name') %></th>
      <th><%= t('list.count')%></th>
      <th><%= t('helpers.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= link_to list.name, list_path(list) %></td>
        <td><%= list.users.count %></td>
        <td>
          <%= link_to t("helpers.links.edit"),
                      edit_list_path(list), :class => 'btn btn-mini' %>
          <%= link_to t("helpers.links.destroy"),
                      list_path(list),
                      :method => :delete,
                      :data => { :confirm => t("helpers.links.confirm") },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
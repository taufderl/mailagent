<%- model_class = List -%>
<div class="page-header">
  <h1><%= t("list.show", name: @list.name) %></h1>
</div>

<table class="table table-striped table-condensed table-hover span4">
  <thead>
  	<th><%= t('user.full_name')%></th>
  	<th><%= t('user.email')%></th>
  	<th></th>
  </thead>
  <tbody>
  	
  	<% @list.users.each do |user| %>
  	  <tr>
  	    <td><%= link_to user.full_name, user_path(user) %></td>
  	    <td><%= link_to user.email, user_path(user) %></td>
  	    <td>
  	    	<%= link_to t('list.remove_user'), "#", class: 'btn btn-mini btn-danger' %>
  	    </td>
  	  </tr>
  	<%end %>
  </tbody>
</table>
<dl class="dl-horizontal">
  	
</dl>

<div class="form-actions">
  <%= link_to t("helpers.links.back"),
              lists_path, :class => 'btn'  %>
  <%= link_to t("helpers.links.edit"),
              edit_list_path(@list), :class => 'btn' %>
  <%= link_to t("helpers.links.destroy"),
              list_path(@list),
              :method => 'delete',
              :data => { :confirm => t("helpers.links.confirm", :default => 'Are you sure?') },
              :class => 'btn btn-danger' %>
</div>

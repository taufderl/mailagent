<!DOCTYPE html>
<html>
<head>
  <title>Mailagent</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	
	<div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Mailagent</a>
          <div class="container nav-collapse">
            <ul class="nav">

            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">
        <div class="row">
          <div class="span9">
            <%= bootstrap_flash %>
            <%= yield %>
          </div>
          <% if current_user %>
          <div class="span3">
            <div class="well sidebar-nav">
              <ul class="nav nav-list">
                <li class="nav-header">Actions</li>
              	<li><%= link_to "Show Users", :users  %></li>
              	<li><%= link_to "New User", :new_user  %></li>
              	<li><%= link_to "Show Lists", :lists  %></li>
              	<li><%= link_to "New List", :new_list  %></li>
              	<li><%= link_to "Show Subscriptions", :subscriptions  %></li>
              	<li><%= link_to "Send test Mail", :test_mail %></li>
              		
              </ul>
            </div><!--/.well -->
          
          
              <div class="well">
              	<ul class="nav nav-list">
                  <li class="nav-header"><%= current_user.email %></li>
                  <li><%= link_to "Mein Profil", user_path(current_user) %></li>
                  <li><%= link_to "Logout", logout_path, method: :delete %></li>
                </ul>
              </div><!--/.well -->
            </div><!--/span-->
          <% end %>
        </div><!--/row-->

      <footer>
        <p>&copy; Tim auf der Landwehr 2013</p>
      </footer>

    </div> <!-- /container -->

</body>
</html>

<!DOCTYPE html>
<html>
<head>
  <title><%= t('page.title') %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	
	<div class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
        	
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          
          <%= link_to t('page.title'), dashboard_path, html_options = {class: "brand"} %>
         
         <% if current_user %> 
          <div class="container nav-collapse">
          	<div class="btn-group">
          	  <%= link_to t('links.dashboard'), dashboard_path, class: 'btn' %>
          	</div>
            <div class="btn-group">
           	  <%= link_to t('user.title'), :users, class: 'btn'%> 
         	  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
         	     <span class="caret"></span>
         	  </a>
         	  <ul class="dropdown-menu">
         	  	<li><%= link_to t('links.admins'), users_path({:q => {'role_cont' => 'admin'}})  %></li>
         	  	<li><%= link_to t('links.new_user'), :new_user  %></li>
         	  </ul>
         	</div>
         	
         	<div class="btn-group">
         		<%= link_to t('list.title'), :lists, class: 'btn' %>
         	  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
         	     <span class="caret"></span>
         	  </a>
         	  <ul class="dropdown-menu">
         	  	<li><%= link_to t('links.new_list'), :new_list  %></li>
         	  </ul>
            </div>
            
         	<div class="btn-group">
         		<%= link_to t('email.title'), :emails, class: 'btn' %>
            </div>
            
            <div class="btn-group">
         		<%= link_to t('links.import'), import_path, class: 'btn' %>
            </div>
            
			<div class="btn-group pull-right">
         	  <%= link_to current_user.email, profile_path, class: 'btn btn-inverse' %>
         	  <%= link_to "Logout", logout_path, method: :delete, class: 'btn btn-inverse' %>
            </div>
            
          </div><!--/.nav-collapse -->
          <% end %>
        </div>
      </div>
    </div>

    <div class="container">
        <div class="row">
          <div class="span12">
            <%= bootstrap_flash %>
            <%= yield %>
          </div>
        </div><!--/row-->

    </div> <!-- /container -->
    
	<footer>
    	<div>
          		<p class="copyright pull-right">&copy; Tim auf der Landwehr 2013 - <a href="http://taufderl.de">taufderl.de</a></p>
		</div>
	</footer>
	
</body>
</html>

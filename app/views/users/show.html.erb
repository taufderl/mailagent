<%- model_class = User -%>
<h1><%=t 'user.title' %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= t('user.full_name') %>:</strong></dt>
  <dd><%= @user.full_name %></dd>
  <dt><strong><%= t('user.email') %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= t('list.title') %>:</strong></dt>
  <dd><%= @user.lists.join(', ') %></dd>
</dl>

<div class="form-group">
  <%= link_to t('helpers.links.back'), :back, :class => 'btn btn-default' %>
  <%= link_to t('helpers.links.edit'), edit_user_path(@user), :class => 'btn btn-default' %>
  <%= link_to t('helpers.links.destroy'),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t("helpers.links.confirm") },
              :class => 'btn btn-danger' %>
</div>

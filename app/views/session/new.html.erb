<div class="span4">
    <%= form_tag do %>
      <fieldset>
        <legend>Login</legend>

        <div>
          <%= label_tag :email, 'Email:' %>
          <%= text_field_tag :email, params[:email] %>
        </div>
        <div>
          <%= label_tag :password, 'Password:' %>
          <%= password_field_tag :password, params[:password] %>
        </div>
        <div>
       	  <%= hidden_field_tag :login %>
          <%= submit_tag 'Login' %>
        </div>
      </fieldset>
    <% end %>
</div>

<div class="span4">
    <%= form_tag do %>
      <fieldset>
        <legend>Sign up</legend>
        <div>
          <%= label_tag :email, 'Email:' %>
          <%= text_field_tag :email, params[:email] %>
        </div>
        <div>
        	<%= hidden_field_tag :signup %>
          <%= submit_tag 'Sign up' %>
        </div>
      </fieldset>
    <% end %>
</div>